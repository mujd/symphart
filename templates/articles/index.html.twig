{% extends 'base.html.twig' %}

{% block title %}
  SymphArt Articles
{% endblock %}

{% block body %}
  {% if articles %}
    <table id="articles" class="table table-striped">
      <thead>
        <tr>
          <th>Article title</th>
          <th>Article body</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for article in articles %}
          <tr>
            <td>{{article.title}}</td>
            <td>{{article.body}}</td>
            <td>
              <a href="/article/{{article.id}}" class="btn btn-dark btn-sm rounded-0">show</a>
              <a href="/article/edit/{{article.id}}" class="btn btn-sm btn-primary rounded-0">Edit</a>
              <a href="#" class="btn btn-danger delete-article btn-sm rounded-0" data-id="{{article.id}}">delete</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No articles to display</p>
  {% endif %}
{% endblock %}

{% block javascripts %}
  <script src="/js/main.js"></script>
{% endblock %}